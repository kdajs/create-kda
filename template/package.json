{
  "name": "{{name}}",
  "main": "./dist/app.js",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:ts": "kda-build",
    "build": "run-s build:ts",
    "check:type": "tsc",
    "check:format": "eslint ./src/**/*.ts",
    "check": "run-s check:type check:format",
    "server:test": "kda server test",
    "server:test:debug": "kda server test --debug=8080",
    "server:prod": "kda server production",
    "server:prod:debug": "kda server production --debug=8080",
    "start": "run-s build server:test",
    "debug": "run-s build server:test:debug",
    "debug:test": "run-s build server:test:debug",
    "debug:prod": "run-s build server:prod:debug",
    "release:test": "kda pm2exec test --reload --esmodule",
    "release:prod": "kda pm2exec production --reload --esmodule"
  },
  "gitHooks": {
    "pre-commit": "npm run check"
  },
  "dependencies": {
    "dayjs": "^1.10.4",
    "kda": "{{kdaVersion}}",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.27.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "kda-build": "{{kdaBuildVersion}}",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.2",
    "yorkie": "^2.0.0"
  }
}
