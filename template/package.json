{
  "name": "{{name}}",
  "main": "./dist/app.js",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "rimraf dist",
    "json.schema": "kda json.schema ./src/@types/json.schema.d.ts",
    "build:ts": "swc ./src -d dist",
    "build": "run-s json.schema build:ts",
    "check:type": "tsc",
    "check:format": "eslint ./src/**/*.ts",
    "check": "run-s check:type check:format",
    "server:test": "kda server test",
    "server:test:debug": "kda server test --debug=8080",
    "server:prod": "kda server production",
    "server:prod:debug": "kda server production --debug=8080",
    "start": "run-s clean build:ts server:test",
    "debug:test": "run-s clean build server:test:debug",
    "debug:prod": "run-s clean build server:prod:debug",
    "release:test": "kda pm2exec test --reload --esmodule",
    "release:prod": "kda pm2exec production --reload --esmodule"
  },
  "gitHooks": {
    "pre-commit": "npm run check"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.4",
    "jsonschema": "^1.4.0",
    "kda": "{{kdaVersion}}",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.40",
    "@swc/core": "^1.2.57",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "yorkie": "^2.0.0"
  }
}
