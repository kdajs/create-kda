{
  "name": "{{ name }}",
  "main": "./dist/app.js",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:swc": "swc ./src -d dist",
    "build:tsc": "tsc -b tsconfig.json",
    "serve:test": "kda serve test",
    "serve:test:debug": "kda serve test --debug=8080",
    "serve:prod": "kda serve production",
    "serve:prod:debug": "kda serve production --debug=8080",
    "start": "run-s clean build:swc serve:test",
    "debug:test": "run-s clean build:swc serve:test:debug",
    "debug:prod": "run-s clean build:swc serve:prod:debug",
    "release:test": "kda pm2exec test --reload --esmodule",
    "release:prod": "kda pm2exec production --reload --esmodule"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.4",
    "kda": "{{kdaVersion}}",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.40",
    "@swc/core": "^1.2.57",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.1.3"
  }
}
